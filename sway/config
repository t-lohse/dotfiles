bar {
# ln -s ~/.config/sway/bar_start.sh ~/.local/bin/waybar_start
    swaybar_command waybar_start
    strip_workspace_numbers yes
    pango_markup enabled
}

include /etc/sway/config.d/*
xwayland enable

